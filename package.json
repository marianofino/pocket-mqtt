{
  "name": "pocket-mqtt",
  "version": "1.0.0",
  "description": "Lightweight API-first IoT platform with MQTT broker and REST API",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf dist coverage .turbo *.tsbuildinfo",
    "test": "pnpm -r test",
    "test:examples": "vitest run examples/setup-device.test.ts",
    "test:watch": "pnpm -r --parallel test:watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "dev": "pnpm --filter \"@pocket-mqtt/app-*\" dev",
    "dev:api": "pnpm --filter @pocket-mqtt/app-api dev",
    "dev:mqtt-broker": "pnpm --filter @pocket-mqtt/app-mqtt-broker dev",
    "dev:all": "concurrently \"pnpm dev:api\" \"pnpm dev:mqtt-broker\"",
    "start:api": "pnpm --filter @pocket-mqtt/app-api start",
    "start:mqtt-broker": "pnpm --filter @pocket-mqtt/app-mqtt-broker start",
    "db:migrate": "pnpm --filter @pocket-mqtt/db db:migrate",
    "db:generate": "pnpm --filter @pocket-mqtt/db db:generate",
    "db:studio": "pnpm --filter @pocket-mqtt/db db:studio",
    "db:push": "pnpm --filter @pocket-mqtt/db db:push",
    "db:reset": "pnpm db:reset:sqlite",
    "db:reset:sqlite": "rm -f packages/db/dev.db && pnpm db:push",
    "db:reset:pg": "psql \"$DATABASE_URL\" -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\" && pnpm db:push"
  },
  "keywords": [
    "mqtt",
    "iot",
    "broker",
    "aedes",
    "fastify"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.27.0"
}
