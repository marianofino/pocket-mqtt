{
  "name": "pocket-mqtt",
  "version": "1.0.0",
  "description": "Lightweight API-first IoT platform with MQTT broker and REST API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:examples": "vitest run examples/setup-device.test.ts",
    "test:watch": "pnpm -r --parallel test:watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "dev": "pnpm --filter \"@pocket-mqtt/app-*\" dev",
    "dev:api": "pnpm --filter @pocket-mqtt/app-api dev",
    "dev:broker": "pnpm --filter @pocket-mqtt/app-broker dev",
    "dev:all": "concurrently \"pnpm dev:api\" \"pnpm dev:broker\"",
    "start:api": "pnpm --filter @pocket-mqtt/app-api start",
    "start:broker": "pnpm --filter @pocket-mqtt/app-broker start",
    "db:migrate": "pnpm --filter @pocket-mqtt/db db:migrate",
    "db:generate": "pnpm --filter @pocket-mqtt/db db:generate",
    "db:studio": "pnpm --filter @pocket-mqtt/db db:studio",
    "db:push": "pnpm --filter @pocket-mqtt/db db:push",
    "db:reset": "pnpm db:reset:sqlite",
    "db:reset:sqlite": "rm -f packages/db/dev.db && pnpm db:push",
    "db:reset:pg": "psql \"$DATABASE_URL\" -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\" && pnpm db:push"
  },
  "keywords": [
    "mqtt",
    "iot",
    "broker",
    "aedes",
    "fastify"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "aedes": "^0.51.3",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.6.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.57.0",
    "mqtt": "^5.14.1",
    "prettier": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.27.0"
}
