  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "mqtt": "^5.14.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.45.0"
