    "test:watch": "vitest"
  },
  "keywords": ["pocket-mqtt", "mqtt", "broker", "aedes"],
  "license": "ISC",
  "dependencies": {
    "@pocket-mqtt/core": "workspace:*",
    "@pocket-mqtt/db": "workspace:*",
