{
  "name": "@pocket-mqtt/telemetry-service",
  "version": "1.0.0",
  "description": "Telemetry buffering and flushing service for PocketMQTT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=24.0.0"
