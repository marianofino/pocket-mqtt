    "test:watch": "vitest"
  },
  "keywords": ["pocket-mqtt", "telemetry", "service"],
  "license": "ISC",
  "dependencies": {
    "@pocket-mqtt/core": "workspace:*",
    "@pocket-mqtt/db": "workspace:*"
