{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "../..",
    "paths": {
      "@pocket-mqtt/core": ["packages/core/src/index.ts"],
      "@pocket-mqtt/core/*": ["packages/core/src/*"],
      "@pocket-mqtt/db": ["packages/db/src/index.ts"],
      "@pocket-mqtt/db/*": ["packages/db/src/*"],
      "@pocket-mqtt/telemetry-service": ["packages/telemetry-service/src/index.ts"],
      "@pocket-mqtt/telemetry-service/*": ["packages/telemetry-service/src/*"],
      "@pocket-mqtt/mqtt-broker": ["packages/mqtt-broker/src/index.ts"],
      "@pocket-mqtt/mqtt-broker/*": ["packages/mqtt-broker/src/*"],
      "@pocket-mqtt/api": ["packages/api/src/index.ts"],
      "@pocket-mqtt/api/*": ["packages/api/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist", "**/*.test.ts", "**/*.spec.ts"]
}
