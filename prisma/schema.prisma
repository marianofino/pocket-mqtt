generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Telemetry {
  id        Int      @id @default(autoincrement())
  topic     String
  payload   String
  timestamp DateTime @default(now())
  
  @@index([timestamp])
  @@index([topic])
}

model DeviceToken {
  id        Int      @id @default(autoincrement())
  deviceId  String   @unique
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  
  @@index([tokenHash])
  @@index([deviceId])
}
