generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Telemetry {
  id        Int      @id @default(autoincrement())
  topic     String
  payload   String
  timestamp DateTime @default(now())
  
  @@index([timestamp])
  @@index([topic])
}

model DeviceToken {
  id        Int      @id @default(autoincrement())
  deviceId  String   @unique
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  
  @@index([token])
  @@index([deviceId])
}
